from random import randint
from time import sleep
import pygame
import emoji
pygame.mixer.init()
pygame.mixer.music.load('ex021.mp3')
pygame.mixer.music.play()
pc = randint(0, 2)
jogadas = ['Pedra', 'Papel', 'Tesoura']
#print(jogadas[pc]) apenas pra testar ^v^

print('{:=^15}'.format(' JOKENPO '))
print(emoji.emojize("""OpÃ§Ãµes:
[ 0 ] ðŸ’Ž Pedra 
[ 1 ] ðŸ“„ Papel 
[ 2 ] :scissors: Tesoura"""))
jogador = int(input('Sua opÃ§Ã£o: '))
print('JO')
sleep(0.64)
print('KEN')
sleep(0.64)
print('PO!!!')
sleep(0.43)

#CondiÃ§Ãµes de vitÃ³ria/perda/empate

if jogador == 1 and pc == 0:
    print('-='*10)
    print("""Computador jogou {}
Jogador jogou {}""".format(jogadas[pc], jogadas[jogador]))
    print('-='*10)
    print('Jogador ganha!')
elif jogador == 0 and pc == 1:
    print('-='*10)
    print("""Computador jogou {}
Jogador jogou {}""".format(jogadas[pc], jogadas[jogador]))
    print('-='*10)
    print('Maquina ganha!')
elif jogador == 2 and pc == 1:
    print('-='*10)
    print("""Computador jogou {}
Jogador jogou {}""".format(jogadas[pc], jogadas[jogador]))
    print('-='*10)
    print('Jogador ganha!')
elif jogador == 1 and pc == 2:
    print('-='*10)
    print("""Computador jogou {}
Jogador jogou {}""".format(jogadas[pc], jogadas[jogador]))
    print('-='*10)
    print('Maquina ganha!')
elif jogador == 0 and pc == 2:
    print('-='*10)
    print("""Computador jogou {}
Jogador jogou {}""".format(jogadas[pc], jogadas[jogador]))
    print('-='*10)
    print('Jogador ganha!')
elif jogador == 2 and pc == 0:
    print('-='*10)
    print("""Computador jogou {}
Jogador jogou {}""".format(jogadas[pc], jogadas[jogador]))
    print('-='*10)
    print('Maquina ganha!')
elif jogador == pc:
    print('-='*10)
    print("""Computador jogou {}
Jogador jogou {}""".format(jogadas[pc], jogadas[jogador]))
